#~/.config/zathura/
#
#------------------------------ Solarized Dark colorscheme ----------------------------
set notification-error-bg       "#586e75" # base01  # seem not work
set notification-error-fg       "#dc322f" # red
set notification-warning-bg     "#586e75" # base01
set notification-warning-fg     "#dc322f" # red
set notification-bg             "#586e75" # base01
set notification-fg             "#b58900" # yellow

set completion-group-bg         "#002b36" # base03
set completion-group-fg         "#839496" # base0
set completion-bg               "#073642" # base02
set completion-fg               "#93a1a1" # base1
set completion-highlight-bg     "#586e75" # base01
set completion-highlight-fg     "#eee8d5" # base2

set index-bg                   "#073642" # base02
set index-fg                   "#93a1a1" # base1
set index-active-bg             "#586e75" # base01
set index-active-fg             "#eee8d5" # base2

set inputbar-bg                 "#586e75" # base01
set inputbar-fg                 "#eee8d5" # base2

set statusbar-bg                "#073642" # base02
set statusbar-fg                "#93a1a1" # base1

set highlight-color             "#657b83" # base00  # hightlight match when search keyword(vim's /)
set highlight-active-color      "#268bd2" # blue

set default-bg                  "#073642" # base02
set default-fg                  "#93a1a1" # base1
set render-loading-fg           "#073642" # base02
set render-loading-bg           "#073642" # base02

#Recolor book content's color
set recolor                     true
set recolor-lightcolor          "#073642" # base02
set recolor-darkcolor           "#93a1a1" # base1
#set recolor-keephue true 	#to keep original color

#------------------------------ Main options ------------------------------------------
set selection-clipboard clipboard
set window-heigh 768 #defines the window height on startup
set window-width 1366  #defines the window width on startup
set adjust-open width #defines which auto adjustment mode should be used if a document is loaded. Possible options are "best-fit" and "width".
set guioptions s #Shows or hides GUI elements.When it contains 'c', the command line is showed.When it contains 's', the statusbar is showed.
set font Inconsolata normal 9
set adjust-open width # default mode to open file. Options are width or best-fit
set n-completion-items 10 # Defines the maximum number of displayed completion entries. Default is 15.
set show-scrollbars false
set window-title-page true #Display the page number in the window title.
set window-title-basename true #Use basename of the file in the window title.
set statusbar-basename true #only shows the filename as the basebar title
set statusbar-v-padding 10
set statusbar-h-padding 4
set page-padding 0 #the page padding defines the gap in pixels between each rendered page. DOES NOT SEEM TO HAVE ANY EFFECT
set pages-per-row 1
set render-loading true #Defines if the "Loading..." text should be displayed if a page is rendered.
set scroll-page-aware true #Defines if scrolling by half or full pages stops at page boundaries.
#set smooth-scroll true #seems to make no effect if true or false
set scroll-full-overlap 0.1 #Defines the proportion of the current viewing area that should be visible after scrolling a full page. Default is 0.1.
set scroll-step 30 #Defines the step size of scrolling by calling the scroll command once
set scroll-hstep 10 #Defines the horizontal step size of scrolling by calling the scroll command once
set scroll-wrap false #Defines if the last/first page should be wrapped
set zoom-min 5 #Defines the minimum percentage that the zoom level can be
set zoom-max 1000 #Defines the maximum percentage that the zoom level can be
set zoom-step 5 #Defines the amount of percent that is zoomed in or out on each comand.
#------------------------------ Keybindings ------------------------------------------
